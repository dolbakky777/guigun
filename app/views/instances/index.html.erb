<h1>Listing instances</h1>

<table>
  <tr>
    <th>Application</th>
    <th>Branch</th>
    <th>Server</th>
    <th>Memo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @instances.each do |instance| %>
  <tr>
    <td><%= instance.application %></td>
    <td><%= instance.branch %></td>
    <td><%= instance.server %></td>
    <td><%= instance.memo %></td>
    <td><%= link_to 'Show', instance %></td>
    <td><%= link_to 'Edit', edit_instance_path(instance) %></td>
    <td><%= link_to 'Destroy', instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

