<h1><%=t("controllers.names.instance.index") %></h1>

<table>
  <tr>
    <th><%=t("activerecord.attributes.instance.application") %></th>
    <th><%=t("activerecord.attributes.instance.branch") %></th>
    <th><%=t("activerecord.attributes.instance.server") %></th>
    <th><%=t("activerecord.attributes.instance.memo") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @instances.each do |instance| %>
  <tr>
    <td><%= instance.application %></td>
    <td><%= instance.branch %></td>
    <td><%= instance.server %></td>
    <td><%= instance.memo %></td>
    <td><%= link_to t("buttons.detail"), instance %></td>
    <td><%= link_to t("buttons.edit"), edit_instance_path(instance) %></td>
    <td><%= link_to t("buttons.delete"), instance, method: :delete, data: { confirm: t("messages.record.instance.message1") } %></td>
  </tr>
<% end %>
</table>

